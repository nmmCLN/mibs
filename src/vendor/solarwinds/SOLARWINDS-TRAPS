SOLARWINDS-TRAPS DEFINITIONS ::= BEGIN

IMPORTS
        IpAddress, Counter, TimeTicks     FROM RFC1155-SMI
	TRAP-TYPE                         FROM RFC-1215
	MODULE-IDENTITY,
	OBJECT-IDENTITY,
	enterprises                       FROM SNMPv2-SMI
        DisplayString                     FROM RFC1213-MIB	
        solarWinds                        FROM SOLARWINDS-PRODUCTS;


solarWinds-Traps	MODULE-IDENTITY
        LAST-UPDATED    "0404060000Z"
        ORGANIZATION    "SolarWinds Worldwide, LLC."
        CONTACT-INFO    "SolarWinds.com Technical Support

                         Postal: 7171 Southwest Parkway, Bldg 400, 
                                 Austin, Texas 78735
                         Phone:  +1-866-530-8100
                         Web:    https://www.solarwinds.com/company/contact-us"

        DESCRIPTION
                "This MIB Module defines the generic traps generated by SolarWinds Orion Network Performance Monitor."

        ::= { solarWinds 10 }


--	Generic Alert Message

alertMessage     OBJECT-TYPE
                 SYNTAX           DisplayString
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION
			"Alert Message generated by Network Performance Monitor
			 The Alert Message will contain a user defined text message
			 describing the Alert.
			" 
                ::= { solarWinds-Traps 1 }

nodeName         OBJECT-TYPE
                 SYNTAX           DisplayString
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION      "Name of the Node that triggered the Alert" 

                ::= { solarWinds-Traps 2 }

nodeIP           OBJECT-TYPE
                 SYNTAX           IpAddress
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION      "IP Address of the Node that triggered the Alert" 

                ::= { solarWinds-Traps 3 }

nodeID           OBJECT-TYPE
                 SYNTAX           DisplayString
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION      "ID or GUID of the Node that triggered the Alert" 

                ::= { solarWinds-Traps 4 }

netObjectName    OBJECT-TYPE
                 SYNTAX           DisplayString
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION      "Type of Object that triggered the Alert" 

                ::= { solarWinds-Traps 5 }

netObjectType    OBJECT-TYPE
                 SYNTAX           DisplayString
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION
			"Name of the Network Object that triggered the Alert
                         
                         This is usually the name of the Node, Interface, or Volume
                        " 
                ::= { solarWinds-Traps 6 }

netObjectID      OBJECT-TYPE
                 SYNTAX           DisplayString
                 MAX-ACCESS       read-only
                 STATUS           current
                 DESCRIPTION      "ID Number or GUID of the Network Object that triggered the Alert"

                ::= { solarWinds-Traps 7 }

genericAlert    TRAP-TYPE			
                ENTERPRISE  solarWinds
                VARIABLES   { alertMessage }
                DESCRIPTION
                "Generic Alert Trap generated by Network Performance Monitor

                Uses the 'Orion-Generic-Alert.Trap' template
		"
          ::= 1

detailedAlert   TRAP-TYPE			
                ENTERPRISE  solarWinds
                VARIABLES   { nodeName, nodeIP, netObjectName, netObjectType, netObjectID, alertMessage }
                DESCRIPTION
                "Detailed Alert Trap generated by Network Performance Monitor

                Uses the 'Orion-Detailed-Alert.Trap' template
		"
          ::= 10
END
